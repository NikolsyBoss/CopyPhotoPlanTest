<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#dadede"/>
            <corners android:radius="15dp"/>
            <padding
                android:bottom="3dp"
                android:left="2.5dp"
                android:right="0dp"
                android:top="0dp" >
            </padding>
            <size android:height="400dp" android:width="200dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EEEBE6"/>

            <padding
                android:bottom="3dp"
                android:left="2.5dp"
                android:right="0dp"
                android:top="0dp" >
            </padding>
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>